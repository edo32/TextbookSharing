<h1>New Textbook</h1>

<%= form_for :textbook, url: textbooks_path do |f| %>
  <!-- Look at the blog code make thing cleaner -->
  <h4>Textbook information</h4>

  <p><%= f.label :title %> <br>
    <%= f.text_field :title %></p>

  <p><%= f.label :author %> <br>
    <%= f.text_field :author %></p>

  <p><%= f.label :isbn %> <br>
    <%= f.text_field :isbn %></p>

  <p><%= f.label :price %> <br>
    <%= f.number_field :price, in: 0.00..5000.00, step: 0.01 %></p>

  <h4>Seller Information</h4>
  <p><%= f.label :college %> <br>
    <%= f.text_field :college %></p>

  <p><%= f.label :email %> <br>
    <%= f.email_field :email %></p>

  <p><%= f.label :fblink %> <br>
    <%= f.url_field :fblink %></p>

  <p><%= f.submit %></p>
<% end %>
